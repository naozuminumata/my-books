<div class="regist">
  <div class="card border-none mb-3 p-3 mx-auto">
    <div class="bg-transparent ml-2 mt-2">
      <h5>新規ユーザー登録</h5>
      <div class="form_groups">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <p>*は入力必須項目</p>

        <div class="normal">
          <div class="form_group">
            <label>名前</label>*
            <%= f.text_field :name, :placeholder => "名前を入力して下さい", class: " form" %>
          </div>
          <div class="form_group">
            <label>メールアドレス</label>*
            <%= f.text_field :email, :placeholder => "メールアドレスを入力して下さい", class: "form" %>
          </div>
        </div>

        <div class="normal">
          <div class="form_group">
            <label>パスワード</label>*
            <%= f.password_field :password, :placeholder => "パスワードを入力して下さい", class: " form" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="form_group">
            <label>パスワード確認</label>*
            <%= f.password_field :password_confirmation, :placeholder => "パスワードを入力して下さい", class: "form" %>
          </div>
        </div>

        <div class="normal">
          <div class="form_group">
            <label>プロフィール文</label>
            <%= f.text_area :profile, :placeholder => "プロフィール文を入力して下さい", class: "form-control", size: "100x5" %>
          </div>
        </div>

        <div class="normal">
          <div class="form_group">
            <label>画像</label>
            <%= f.file_field :image, id: "image", name: "image", accept:"image/*" %>
            <span style="color: #ff0000;" data-mce-style="color: #ff0000;">
              <div><img id="thumbnail" src="/assets/default.jpg" size='100x100' class="trim-image-to-circle-thumbnail"></div>
            </span>
          </div>
        </div>

        <script>
          $('#image').change(function() {
            if (this.files.length > 0) {
              // 選択されたファイル情報を取得
              var file = this.files[0];

              // readerのresultプロパティに、データURLとしてエンコードされたファイルデータを格納
              var reader = new FileReader();
              reader.readAsDataURL(file);

              reader.onload = function() {
                $('#thumbnail').attr('src', reader.result);
              }
            }
          });
        </script>

        <div class="form_group">
          <%= f.submit "送信", class:"btn btn-dark btn-lg"  %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>