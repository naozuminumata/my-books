<% comments.each do |comment| %>
<div class="row">
  <div class="col-sm-2 col-xs-5 text-center pos-col">
    <div class="pos-usr-menu">
      <div class="pos-name">
        <%= link_to user_path(comment.user) do %>
        <%= comment.user.name %>
        <%end%>
      </div>
      <div class="pos-menu">
        <div class="btn-group" role="group">
          <%= link_to edit_comment_path(comment),class: "btn btn-default comment_edit_#{comment.id}",remote:true do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <%end%>
          <%= link_to comment, method: :delete,class: "btn btn-default comment_delete_#{comment.id}" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <%end%>
        </div>
      </div>
    </div>
  </div>
  <div id="editmodal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="col-sm-10 col-xs-12">
      <div class="balloon1-left">
        <p><%= comment.content%></p>
      </div>
    </div>
  </div>
</div>
<% end %>